@model ProiectColectiv.ViewModels.JobsViewModel

@{
    ViewData["Title"] = "Jobs";
}

<h2>Jobs</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Title
            </th>
            <th>
                Short Description
            </th>
            <th>
                Posted On
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Jobs)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PostedOn)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<h4>Page: @Html.DisplayFor(model => model.CurrentPage)/@Html.DisplayFor(model => model.TotalPages)</h4>
@if (Model.CurrentPage > 1)
{
    <a asp-action="" asp-route-page="@(Model.CurrentPage - 1)">Previos</a>
}
@if (Model.CurrentPage < Model.TotalPages)
{
    <a asp-action="" asp-route-page="@(Model.CurrentPage + 1)">Next</a>
}